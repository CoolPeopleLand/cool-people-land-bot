{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "incremental": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules/"
  ]
}